//Note, you can use the in-game visual profile editor to tweak the x/y offsets, faster than trying to do it in here.

<resources>

	<profile name="spider">

		<anim state="idle_left" spritename="idle_right" mirrorx="yes" x="0" y="-14"/>
		<anim state="idle_right" spritename="idle_right" mirrorx="no" x="0" y="-14"/>

 		<anim state="run_left" spritename="walk_right" mirrorx="yes" x="0" y="-9"/>
 		<anim state="run_right" spritename="walk_right" mirrorx="no" x="0" y="-9"/>

 		<anim state="die_left" spritename="die_right" mirrorx="yes" x="0" y="-18"/>
 		<anim state="die_right" spritename="die_right" mirrorx="no" x="0" y="-15"/>

	</profile>

	<sprite name="idle_right">
		<image fileseq="idle/idle_right_.png" leading_zeroes="0"/>
		<translation origin="center"/>
		<animation pingpong="yes" loop="yes" speed="190"/>
	</sprite>
		
	<sprite name="walk_right">
		<image fileseq="walk/walk_right_.png" leading_zeroes="0"/>
		<translation origin="center"/>
		<rotation origin="center" x="0" y="0"/>
		<animation pingpong="no" loop="yes" speed="110"/>
	</sprite>

	<sprite name="die_right">
		<image fileseq="die/die_right_.png" leading_zeroes="0"/>
		<translation origin="center" x="0" y="0"/>
		<animation on_finish="last_frame" pingpong="no" loop="no" speed="150"/>
	</sprite>
 		
</resources>
