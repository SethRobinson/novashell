<resources>

	<profile name="player">
		<anim state="idle_left" spritename="idle_right" mirrorx="yes" x="-9" y="-9"/>
		<anim state="idle_right" spritename="idle_right" mirrorx="no" x="-8" y="-9"/>

		<anim state="walk_left" spritename="walk_right" mirrorx="yes" x="-9" y="-9"/>
		<anim state="walk_right" spritename="walk_right" mirrorx="no" x="-8" y="-9"/>

		<anim state="jump_left" spritename="jump_right" mirrorx="yes" x="-8" y="-8"/>
		<anim state="jump_right" spritename="jump_right" mirrorx="no" x="-7" y="-8"/>


		<anim state="die_left" spritename="die" mirrorx="no" x="-8" y="-7"/>

	</profile>
  
 	
	<sprite name="idle_right">
		<image file="idle_right.png">
			<grid size="16,16" array="1,1"/>
			<translation origin="center"/>
		</image>
		<animation pingpong="no" loop="yes" speed="500"/>
	</sprite>
		
	<sprite name="walk_right">
		<image file="walk_right.png">
			<grid size="16,16" array="3,1"/>
			<translation origin="center"/>
		</image>
		<animation pingpong="no" loop="yes" speed="50"/>
	</sprite>
	
	
		<sprite name="die">
		<image file="die.png">
			<grid size="16,16" array="1,1"/>
			<translation origin="center"/>
		</image>
		<animation pingpong="no" loop="no" speed="1000"/>
	</sprite>
	
			<sprite name="jump_right">
		<image file="jump_right.png">
			<grid size="16,16" array="1,1"/>
			<translation origin="center"/>
		</image>
		<animation on_finish="last_frame" pingpong="no" loop="no" speed="1000"/>
	</sprite>
	
	
</resources>
